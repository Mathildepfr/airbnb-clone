<div class="community-grid">
  <div class="banner-community" style="background-image: url('<%= cl_image_path "https://res.cloudinary.com/mathildepfr/image/upload/v1630549317/Illustration_Rat_pdqjxd.jpg"%>')">
    <h2>Welcome in our community of <strong>rats</strong> !</h2>
  </div>

  <div class="container-rat">
    <div class="container-rat-card">
        <% @rats.each do |rat| %>
          <div class="container-rat-card-profile">
            <div class="card-rat" style="background-image: url('<%= cl_image_path rat.photo.key, height: 300, crop: :fill %>')">
            </div>
            <div class="rat-name">
              <h2><%= link_to rat.first_name , rat_path(rat) %> <%= rat.last_name %></h2>
              <h2><i class="fab fa-redhat"></i> <%= rat.hats.count %></h2>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
