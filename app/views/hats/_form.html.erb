<%= simple_form_for(hat) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :size, as: :radio_buttons, collection: Hat::SIZES %>
  <%= f.input :available %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
