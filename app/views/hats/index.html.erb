<div class="container-hats-shop">
  <h1>Rent hats for <strong>rats</strong> !</h1>

  <div class="container-hats">
    <div class="hats">
      <% @hats.each do |hat| %>
        <div class="card-hat">
          <%= link_to hat_path(hat) do %>
            <div class="card-hat-img" style="background-image: url('<%= cl_image_path hat.photo.key, height: 300, crop: :fill %>')"></div>
          <% end %>
          <div class="card-hat-text">
            <h2><strong><%= link_to hat.title, hat_path(hat) %></strong></h2>
            <div class="price-size">
              <p><i class="fas fa-money-bill-alt"></i> $<%= hat.price %>    </p>
              <p><i class="fas fa-hat-cowboy-side"></i><span class="text-muted"> Size: </span><%= hat.size %></p>
              <p><i class="fas fa-question-circle"></i></i><span class="text-muted"> Available: </span><%= hat.available ? '<i class="fas fa-check-circle text-success"></i>'.html_safe : '<i class="fas fa-times-circle text-danger"></i>'.html_safe %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
